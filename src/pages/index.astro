---
import BaseLayout from "../layouts/BaseLayout.astro";
import ShoppingSection from "../components/ShoppingSection";
import Footer from "../components/Footer";
const pageTitle = "Google Sheet Powered CMS";
---

<BaseLayout pageTitle={pageTitle}>
  <!-- Main content -->
  <main class="flex flex-col min-h-screen">
    <article class="flex-1">
      <div class="flex flex-col items-center p-12 bg-gradient-to-r from-emerald-500 to-teal-600 text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-black/10"></div>
        <div class="relative z-10 text-center">
          <h1 class="font-playfair text-4xl font-bold mb-2">Headless CMS</h1>
          <p class="font-inter text-lg opacity-90 font-light">
            powered by google sheets
          </p>
        </div>
      </div>
	  <section class="flex justify-center">
		<div class="max-w-5xl w-full py-16 px-8">
			<div class="mb-8">
				<h1 class="font-playfair text-4xl font-semibold text-slate-800 mb-2">
					My Shopping Wishlist
				</h1>
				<p class="font-inter text-slate-600 text-lg">Discover and organize your favorite items</p>
			</div>

			<ShoppingSection client:load/>
			
		</div>
	  </section>
    </article>

    <Footer client:load/>
  </main>

  <script>
    // Redirect to small screen page if viewport is smaller than 640px
    if (window.innerWidth < 640) {
      window.location.href = '/small-screen';
    }
  </script>
</BaseLayout>
